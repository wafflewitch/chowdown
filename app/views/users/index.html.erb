<div class="container text-center">
  <h1>Users</h1>
</div>
<div class="container text-center">
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
        <div class="card">
          <% image_url = user.facebook_picture_url || 'http://placehold.it/200x200' %>
          <%= link_to image_tag(image_url), user_path(user) %>
          <h2><%= user.first_name %></h2>
          <p>hello world</p>
        </div>
      </div>
    <% end %>
  </div>
</div>


