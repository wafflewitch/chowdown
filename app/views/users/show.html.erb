<div class="profile-page">

    <div class="card">
        <div class="card-details">
            <div class="card-profile-pic">
                <% image_url = @user.facebook_picture_url || 'http://placehold.it/200x200' %>
                <%= link_to image_tag(image_url), user_path(@user), class: "avatar-large" %>
            </div>
            <div class="food-pref">
              <div class="food-pref-icon">
                <img src="http://res.cloudinary.com/wafflewitch/image/upload/v1500649828/meat_yes.png" alt="" class="foodpref-icons">
              </div>
              <br>
                <img src="http://res.cloudinary.com/wafflewitch/image/upload/v1500649828/fish_no.png" alt="" class="foodpref-icons">
              <br>
                <img src="http://res.cloudinary.com/wafflewitch/image/upload/v1500649828/wheat_yes.png" alt="" class="foodpref-icons">
            </div>

            <h2><%= @user.first_name %>, 23</h2>


            <div class="bio">
            <h5>Bio</h5>
            <p><%= @user.bio %></p>
          </div>

          <div class="pref-cook-pref">
            <h5>I want to cook</h5>
            <%= render 'shared/food_tags' %>
          </div>


        <%= link_to "Chowdowns", user_chows_path(@user, :query => "pending") %>

      <!--
        <div class="btn btn-primary button-chowdowns text-center">
          <h4>chowdowns</h4>
        </div> -->

        <%= link_to "Match Settings", edit_user_registration_path(current_user), {class:"btn button-match-settings"} %>
    </div>
  </div>
</div>


</div>

<% content_for(:center_nav) do %>
  <h3>Edit profile</h3>
<% end %>
<% content_for(:right_nav) do %>
  <%= link_to image_tag("http://res.cloudinary.com/wafflewitch/image/upload/v1500688079/logo_symbol1.png", alt: "symbol logo", class: "navbar-logo-icon"), users_path %>
<% end %>
