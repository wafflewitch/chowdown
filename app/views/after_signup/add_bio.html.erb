<div class="text-center form-signup">
<h4>Last step.</h4>
<h4 class="text-signup">Tell us a little about yourself</h4>
<%= simple_form_for @user, url: wizard_path do |f| %>
<%= f.text_field :bio, input_html: {maxlength: 100}, class: "form-control", placeholder: "I love pasta and cooking with friends!"  %><br>
<%= f.submit "Finish!", class: "btn button-chowdowns button-onboarding" %>
<% end %>
</div>


