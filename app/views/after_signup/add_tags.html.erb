<div class="text-center form-signup">
<h4 class="text-signup">What kind of food are you interested in cooking?</h4>
<%= simple_form_for @user, url: wizard_path do |f| %>
<%= f.text_field :tag1, class: "tag_autocomplete form-control", placeholder: "mediterranean" %><br>
<%= f.text_field :tag2, class: "tag_autocomplete form-control", placeholder: "mexican" %><br>
<%= f.text_field :tag3, class: "tag_autocomplete form-control", placeholder: "american" %><br>
<%= f.text_field :tag4, class: "tag_autocomplete form-control", placeholder: "french" %><br>
<%= f.text_field :tag5, class: "tag_autocomplete form-control", placeholder: "italian" %><br>
<%= f.submit "Continue", class: "btn button-chowdowns button-onboarding" %>
<% end %>
</div>


<% content_for(:center_nav) do %>
  <%= image_tag "chowdown.png", alt: "title logo", class: "navbar-logo"%>
<% end %>
