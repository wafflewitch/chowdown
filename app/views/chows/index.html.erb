<div class="container text-center">
<br>
  <h1>My Chowdowns</h1>
 <%= link_to "My upcoming Chowdowns", user_chows_path(@user, :query => "active") , {class: "btn btn-primary"} %>
 <%= link_to "My Chowdown history", user_chows_path(@user, :query => "finished") , {class: "btn btn-primary"} %>
</div>



<% if @active == true %>
  <div class="container">
    <div class="flex-list">
      <% @finalized_chows.each do |chow| %>
          <div class="card">
            <% @partner = User.find(chow.user_2_id) %>
            <h3><%= @partner.first_name %><%= image_tag @partner.facebook_picture_url, class: "avatar" %></h3>
            <%= link_to "Set Date", new_user_chow_calendar_path(chow.user1, chow) %> | <%= link_to "See Chatbox", user_chow_messages_path(chow.user1, chow) %> | <%= link_to "Delete Chowdown", user_chow_path(chow.user1, chow), method: :delete %>
          </div>
        <% end %>
        <% @active_chows.each do |chow| %>
          <div class="card finalized">
            <% @partner = User.find(chow.user_2_id) %>
            <h3><%= @partner.first_name %><%= image_tag @partner.facebook_picture_url, class: "avatar" %></h3>
            <%= link_to "Set Date", new_user_chow_calendar_path(chow.user1, chow) %> | <%= link_to "See Chatbox", user_chow_messages_path(chow.user1, chow) %> | <%= link_to "Delete Chowdown", user_chow_path(chow.user1, chow), method: :delete %>
          </div>
        <% end %>
    </div>
  </div>
<% end %>


<% if !@finished_chows.nil? %>
  <div class="container">
    <div class="flex-list">
      <% @finished_chows.each do |chow| %>
        <div class="card">
          <% @partner = User.find(chow.user_2_id) %>
          <h3><%= @partner.first_name %><%= image_tag @partner.facebook_picture_url, class: "avatar" %></h3>
          <%= link_to "See Chatbox", user_chow_messages_path(chow.user1, chow) %> | <%= link_to "Delete Chowdown", user_chow_path(chow.user1, chow), method: :delete %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>





